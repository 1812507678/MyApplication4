<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="5.0dip"
		android:paddingBottom="5.0dip"
		android:paddingLeft="10.0dip"
		android:paddingRight="10.0dip"
		android:background="@color/jp_ad_color_transparent"
		android:gravity="left|center_vertical">
		<ImageView
			android:layout_gravity="center"
			android:id="@+id/jp_ad_push_notifi_icon"
			android:layout_width="48.0dip"
			android:layout_height="48.0dip"
			android:src="@drawable/jp_ad_ic_push"
			android:scaleType="centerInside">
		</ImageView>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:paddingLeft="10.0dip"
			android:paddingRight="10.0dip">
			<TextView
				android:id="@+id/jp_ad_push_notifi_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:singleLine="true"
				style="@style/jp_ad_install_notification_title"
				android:ellipsize="end" />
			<TextView
				android:id="@+id/jp_ad_push_notifi_present"
				style="@style/jp_ad_install_notification_content"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:ellipsize="end" />

		</LinearLayout>

	</LinearLayout>
</LinearLayout>
