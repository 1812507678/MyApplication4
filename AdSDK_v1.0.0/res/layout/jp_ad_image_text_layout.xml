<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/jp_ad_image_text_imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/jp_ad_ic_image_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/jp_ad_image_text_imageView"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jp_ad_image_text_title_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:singleLine="false"
                android:text="Clash of Clans"
                android:textColor="@color/jp_ad_color_process_download"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/jp_ad_image_text_description_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jp_ad_image_text_title_textView"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:singleLine="false"
                android:maxLines="2"
                android:text="This is a very useful techniques in it you will have unexpected"
                android:textColor="@color/jp_ad_color_process_download"
                android:textSize="11sp" />

            <LinearLayout
                android:id="@+id/gyl_ad_left_image_right_text_source_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/jp_ad_image_text_ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:progressDrawable="@drawable/jp_ad_ic_ratingbar_selector"
                    android:numStars="5"
                    android:rating="3"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/jp_ad_image_text_install_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/jp_ad_btn_install_selector"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Download"
                    android:textColor="@color/jp_ad_color_process_download"
                    android:textSize="11sp"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>