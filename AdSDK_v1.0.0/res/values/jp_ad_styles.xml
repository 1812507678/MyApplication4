<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="jp_ad_drop_down_list_header_progress_bar_style">
        <item name="android:minHeight">@dimen/jp_ad_drop_down_list_header_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/jp_ad_drop_down_list_header_progress_bar_height</item>
    </style>

    <style name="jp_ad_drop_down_list_footer_progress_bar_style">
        <item name="android:minHeight">@dimen/jp_ad_drop_down_list_footer_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/jp_ad_drop_down_list_footer_progress_bar_height</item>
    </style>

    <style name="jp_ad_drop_down_list_header_font_style">
        <item name="android:textColor">@color/jp_ad_drop_down_list_header_font_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="jp_ad_drop_down_list_header_second_font_style">
        <item name="android:textColor">@color/jp_ad_drop_down_list_header_second_font_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="jp_ad_drop_down_list_footer_font_style">
        <item name="android:textColor">@color/jp_ad_drop_down_list_footer_font_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="jp_ad_install_notification_content" parent="android:TextAppearance.StatusBar.EventContent" />

    <style name="jp_ad_install_notification_title" parent="android:TextAppearance.StatusBar.EventContent.Title" />

    <style name="jp_ad_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

</resources>